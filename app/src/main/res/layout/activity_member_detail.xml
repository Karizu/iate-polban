<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_article">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme"
                app:titleTextColor="@color/colorDefault"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="3">

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/logoheader" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_filter_toolbar"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_login_margin"
                        android:layout_marginRight="@dimen/default_login_margin"
                        android:layout_marginTop="@dimen/default_login_margin"
                        android:src="@drawable/icon_filter"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_qr_code_toolbar"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_login_margin"
                        android:layout_marginRight="@dimen/default_login_margin"
                        android:layout_marginTop="@dimen/default_login_margin"
                        android:src="@drawable/qr_code"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_setting_toolbar"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_login_margin"
                        android:layout_marginRight="@dimen/default_login_margin"
                        android:layout_marginTop="@dimen/default_login_margin"
                        android:src="@drawable/icon_pengaturan_header"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_share_toolbar"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_login_margin"
                        android:layout_marginRight="@dimen/default_login_margin"
                        android:layout_marginTop="@dimen/default_login_margin"
                        android:src="@drawable/ic_share"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/img_notification_toolbar"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_login_margin"
                        android:layout_marginRight="@dimen/default_login_margin"
                        android:layout_marginTop="@dimen/default_login_margin">

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/notification" />

                        <TextView
                            android:id="@+id/counter_notif"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:scaleType="fitStart"
                            android:layout_marginRight="0dp"
                            android:background="#212121"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:adjustViewBounds="true"
                            android:minHeight="10dp"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="8sp"
                            android:layout_marginBottom="3dp"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/background_title"
                android:textAlignment="center"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:text="PROFIL"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:weightSum="30">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:padding="6dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/pr_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"/>

                </FrameLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pr_image_profile"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="16"
                    android:src="@drawable/img_profile_default" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:padding="6dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/pr_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDefaultDark"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/dso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:background="@drawable/background_article_title">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorDefaultDark"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="KARTU DIGITAL"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/card_layout"
                android:layout_width="375dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <com.appbroker.roundedimageview.RoundedImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="375dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cardbg"
                    app:radius="15dp" />


                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="108dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCardName"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/prompt_regular"
                        android:lines="1"
                        android:paddingEnd="8dp"
                        android:text="-"
                        android:textAllCaps="true"
                        android:textColor="#2A3A69"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgQrCode"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/qr_code" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvCardId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/prompt_regular"
                    android:lines="1"
                    android:text="-"
                    android:textColor="#2A3A69"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvDownloadImage"
                android:background="?attr/selectableItemBackground"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Unduh Kartu Digital"
                android:textColor="#fff"
                android:textStyle="bold"/>

            <View
                android:visibility="gone"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:background="@drawable/background_article_title">

                <TextView
                    android:id="@+id/txt_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorDefaultDark"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="INFORMASI UMUM"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/phone"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Nomor Handphone"/>
                    <TextView
                        android:id="@+id/pr_no_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_phone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:foreground="?attr/selectableItemBackground"
                android:background="#2FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Email"/>
                    <TextView
                        android:id="@+id/pr_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_email"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Umur"/>
                    <TextView
                        android:id="@+id/pr_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_umur"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Status"/>
                    <TextView
                        android:id="@+id/pr_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_status"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Ukuran Baju"/>
                    <TextView
                        android:id="@+id/pr_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_ukuran_baju"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Hobby"/>
                    <TextView
                        android:id="@+id/pr_hobby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_hobby"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Interest"/>
                    <LinearLayout
                        android:id="@+id/interest_wrap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_interest"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:foreground="?attr/selectableItemBackground"
                android:background="#2FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Alamat"/>
                    <TextView
                        android:id="@+id/pr_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_alamat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/background_article_title">

                <TextView
                    android:id="@+id/txt_medsos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorDefaultDark"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="AKUN SOSIAL MEDIA"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnWhatsapp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Nomor Whatsapp"/>
                    <TextView
                        android:id="@+id/pr_wa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_whatsapp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnLine"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Akun Line"/>
                    <TextView
                        android:id="@+id/pr_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_line"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorDefaultDark"
                        android:textSize="16dp"
                        android:text="Pin BB"/>
                    <TextView
                        android:id="@+id/pr_bb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/colorDefaultDark"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_bb"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1FFFFFFF"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="match_parent"
