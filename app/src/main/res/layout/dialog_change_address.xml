<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorPrimaryDarkAccent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Ubah Alamat"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/ep_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:background="@drawable/shape_input_text"
                    android:hint="Alamat"
                    android:inputType="text"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <Spinner
                    android:id="@+id/re_province"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_text"
                    android:hint="Provinsi"
                    android:textSize="13sp"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <Spinner
                    android:id="@+id/re_regencies"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_text"
                    android:hint="Kab/Kota"
                    android:textSize="13sp"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <Spinner
                    android:id="@+id/re_districts"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_text"
                    android:hint="Kecamatan"
                    android:textSize="13sp"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <Spinner
                    android:id="@+id/re_villages"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_text"
                    android:hint="Kelurahan"
                    android:textSize="13sp"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <EditText
                    android:id="@+id/re_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_text"
                    android:inputType="number"
                    android:hint="Kode Pos"
                    android:textSize="13sp"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <Spinner
                    android:id="@+id/re_country"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_text"
                    android:hint="Negara"
                    android:textSize="13sp"
                    android:textColorHint="#CBD5DA"
                    android:textColor="@color/colorDefaultDark"/>

                <Button
                    android:id="@+id/cp_edit_profile"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_drawer_menu_top_bottom_margin"
                    android:layout_marginBottom="@dimen/default_drawer_menu_top_bottom_margin"
                    android:layout_marginRight="@dimen/default_login_margin"
                    android:layout_marginLeft="@dimen/default_login_margin"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_button"
                    android:text="SIMPAN"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>

