<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_article">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textColor="@color/colorTitleText"
                android:textSize="16sp"
                android:padding="5dp"
                android:text="PROFIL"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cp_image_profile"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_profile_default" />
            <TextView
                android:id="@+id/cp_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorDefaultDark"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/cp_dso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorNormalText"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/cp_current_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_login_margin"
                android:layout_marginBottom="@dimen/default_login_margin"
                android:layout_marginRight="@dimen/default_login_margin"
                android:layout_marginLeft="@dimen/default_login_margin"
                android:background="@drawable/shape_input_text"
                android:hint="Password Sekarang"
                android:imeActionId="6"
                android:imeActionLabel="@string/action_sign_in"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:textColorHint="#CBD5DA"
                android:textColor="@color/colorDefaultDark"/>

            <EditText
                android:id="@+id/cp_new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/default_login_margin"
                android:layout_marginRight="@dimen/default_login_margin"
                android:layout_marginLeft="@dimen/default_login_margin"
                android:background="@drawable/shape_input_text"
                android:hint="Password Baru"
                android:imeActionId="6"
                android:imeActionLabel="@string/action_sign_in"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:textColorHint="#CBD5DA"
                android:textColor="@color/colorDefaultDark"/>

            <Button
                android:id="@+id/cp_change_password"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_drawer_menu_top_bottom_margin"
                android:layout_marginRight="@dimen/default_login_margin"
                android:layout_marginLeft="@dimen/default_login_margin"
                android:layout_gravity="center"
                android:background="@drawable/background_change_password"
                android:text="GANTI PASSWORD"
                android:textColor="@color/colorDefaultDark"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cp_tv_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorDefault" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>